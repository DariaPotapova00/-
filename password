def password_level(password):
    if len(password) <= 7:
        return "Недопустимый пароль"
    
    has_lowercase = False
    has_uppercase = False
    has_digit = False
    has_special = False
    
    for char in password:
        if char.islower():
            has_lowercase = True
        elif char.isupper():
            has_uppercase = True
        elif char.isdigit():
            has_digit = True
        elif char in "@#$%&*().,-_+":
            has_special = True
    
    if (has_lowercase or has_uppercase) and has_digit and has_special:
        return "Надежный пароль"
    elif (has_lowercase or has_uppercase) and not has_digit and not has_special:
        return "Ненадежный пароль"
    else:
        return "Слабый пароль"
    
password = input("Введите пароль: ")
result = password_level(password)
print(result)
